<%layout('layouts/boilerplate')%>
   

    <div class="row mb-3 mt-3" >
        <div class="col-6 offset-3">
            <div class="card" style="width: 18rem;">
                <%for(let img of user.images){%>
                <img src="<%=img.url%>" class="card-img-top" alt="...">
                <%}%>
                <div class="card-body">
                  <h5 class="card-title" style="font-weight: bold;">Name : <%= user.username %> </h5>
                  <p class="card-text" style="font-weight: bold;" >Email-Id : <%= user.email %> </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Age : <%= user.age %> </li>
                  <li class="list-group-item">Gender : <%= user.gender %> </li>
                  <li class="list-group-item">Role : <%= user.role %> </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/users/<%=user._id%>/edit ">Edit User</a>
                    <form class="d-inline" action="/users/<%=user._id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                        <a class="card-link  btn btn-warning " href="/users">Back</a>
                    </form>
                </div>
              </div>
        </div>
    </div>
