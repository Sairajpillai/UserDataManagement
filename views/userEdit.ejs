<%layout('layouts/boilerplate')%>
    
   

    <div class="row">
        <h1 class="text-center">Edit User</h1>
        <div class="col-6 offset-3">
           
            <form action="/users/<%= user._id %>?_method=PUT " method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="user[username]" value="<%= user.username %>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="user[email]" value="<%= user.email %>">
        </div>
        <div class="mb-3">
            
            <label class="form-label" for="gender">Gender</label>
            <input type="radio" id="gender" value="Male" name="user[gender]" value="<%= user.gender %> ">Male
            <input type="radio" id="gender" value="Female" name="user[gender]" value="<%= user.gender %>" >Female
            
         <!--   <input class="form-control" type="text" id="gender" name="user[gender]">-->
        </div>
        <div class="mb-3">
            <label class="form-label" for="age">Age</label>
            <input class="form-control" type="text" id="age" name="user[age]" value="<%= user.age %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="role">Role</label>
            <input class="form-control" type="text" id="role" name="user[role]" value="<%= user.role %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">image</label>
            <input class="form-control" type="file" id="image" name="image" multiple>
        </div>
        <div class="mb-3">
            <% user.images.forEach(function(img,i){%>
                <img src="<%=img.url%>"  width="200" height="200" alt="">
                <input  type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                <label for="image-<%=i%>">Delete</label>
            <%})%>
        </div>
        <div class="mb-3">
        <button class="btn btn-success"  type="submit">Update User</button>
        <a class="btn btn-warning d-inline" href="/users">Back to User</a></div>
    </form>
    

   

        </div>
    </div>